@model Learnhub.Models.User
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
        @if (ViewData["EmailError"] != null)
        {
            <span class="text-danger">@ViewData["EmailError"]</span>
        }
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <div class="input-group">
            <input type="password" class="form-control" asp-for="PasswordHash" required id="passwordHash">
            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('passwordHash')">
                👁
            </button>
        </div>
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
        @if (ViewData["PasswordError"] != null)
        {
            <span class="text-danger">@ViewData["PasswordError"]</span>
        }
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p>Don't have an account yet? <a asp-action="Register">Register</a></p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(id) {
            var input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
