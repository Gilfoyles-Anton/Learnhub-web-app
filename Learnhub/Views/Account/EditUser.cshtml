@model Learnhub.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-4">
    <h2>Edit User</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="PasswordHash"></label>
            <input asp-for="PasswordHash" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmPasswordHash"></label>
            <input asp-for="ConfirmPasswordHash" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Role"></label>
            <input asp-for="Role" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="AdminActivationCode"></label>
            <input asp-for="AdminActivationCode" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <label asp-for="WalletBalance"></label>
            <input asp-for="WalletBalance" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Users" class="btn btn-secondary">Cancel</a>
    </form>
</div>
